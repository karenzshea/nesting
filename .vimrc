"" pathogen
execute pathogen#infect()

set colorcolumn=100
set expandtab
set hlsearch
set ignorecase
set lcs=tab:├─,trail:☃,extends:»,precedes:«,nbsp:&
set list
set nottimeout
set number
set ruler
set shiftwidth=4
set showcmd
set smartcase
set smartindent
set softtabstop=4

syntax on
filetype plugin indent on
:noremap <Space> :set hlsearch! hlsearch?<CR>
